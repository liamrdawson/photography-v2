{
  "env": {
    "browser": true,
    // "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier", "eslint-config-prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint", "prettier"],
  "rules": {
    "react/jsx-filename-extension": [2, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }]
  },
  "globals": {
    "React": "writable"
  }
}
